<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layoutDescription="@xml/fragment_recyclerview_scene">


    <ImageView
        android:id="@+id/img_action_bar_flag"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:contentDescription="@string/text_todo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />

    <LinearLayout
        android:id="@+id/img_action_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#66000000"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/img_action_bar_flag"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:gravity="center"
        android:text="@string/text_actionbar_country"
        android:textColor="@color/text_color_light"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/img_action_bar_flag"
        tools:ignore="RtlSymmetry,TextContrastCheck" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="?actionBarSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_action_bar_flag"
        tools:listitem="@layout/item_drop_down_country" />
</androidx.constraintlayout.motion.widget.MotionLayout>