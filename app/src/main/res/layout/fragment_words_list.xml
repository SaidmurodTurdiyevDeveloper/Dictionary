<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/def_word_list_layout"
    android:layout_height="match_parent">

    <include
        android:id="@+id/def_actionBar"
        layout="@layout/screen_action_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:elevation="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:background="@drawable/day_night_ic_menu_more"
        android:contentDescription="@string/text_todo"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@id/def_actionBar"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintRight_toRightOf="@id/def_actionBar"
        app:layout_constraintTop_toTopOf="@id/def_actionBar"
        tools:ignore="TouchTargetSizeCheck" />

    <include
        android:id="@+id/def_loadinglayout"
        layout="@layout/screen_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="6dp"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/def_error_layout"
        layout="@layout/screen_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/def_actionBar" />

    <include
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/def_recyclerView"
        layout="@layout/screen_recycler_view"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/def_actionBar" />

</androidx.constraintlayout.widget.ConstraintLayout>