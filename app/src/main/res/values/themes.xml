<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyNewWords" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowBackground">@drawable/window_background_light</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Alternative">
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Title">
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.Title.Alternative">
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <style name="Text.Title.Percent">
        <item name="android:textColor">@color/action_color_dark</item>
    </style>

    <style name="ButtonStyleBorderless">
        <item name="backgroundTint">@color/black</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="FloatButtonStyle">
        <item name="backgroundTint">@color/my_background_light</item>
        <item name="iconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BackgroundLayout">
        <item name="android:background">#809D9D9D</item>
    </style>

</resources>